<UserControl x:Class="ModuleAgenda.View.ModuleAgendaView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:v="clr-namespace:ModuleAgenda.View"
             xmlns:vm="clr-namespace:ModuleAgenda.ViewModel"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">

    <UserControl.Resources>
        <Style x:Key="DetailBorder" TargetType="{x:Type Border}">
            <Setter Property="Height" Value="Auto" />
            <Setter Property="BorderBrush" Value="LightGray" />
            <Setter Property="BorderThickness" Value="1" />
            <Setter Property="CornerRadius" Value="6" />
            <Setter Property="Padding" Value="2" />
        </Style>
        <Style x:Key="SubDisplayArea" TargetType="{x:Type HeaderedContentControl}">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type HeaderedContentControl}">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            <Border Grid.Row="0" Background="LightGray" BorderBrush="LightGray"  Padding="8,2,8,6" CornerRadius="6,6,0,0" BorderThickness="2,2,2,0">
                                <TextBlock Foreground="#FF282828" HorizontalAlignment="Left" VerticalAlignment="Center">
                                    <ContentPresenter ContentSource="Header"/>
                                </TextBlock>
                            </Border>
                            <Border Grid.Row="1" Background="White" BorderBrush="LightGray" CornerRadius="0,0,6,6" BorderThickness="2,0,2,2">
                                <ContentPresenter/>
                                <Border.RenderTransform>
                                    <ScaleTransform x:Name="ContentScale" ScaleX="1" ScaleY="1" />
                                </Border.RenderTransform>
                            </Border>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>


        <StackPanel Grid.Column="1" Margin="0" VerticalAlignment="Top" Grid.RowSpan="2">
            <HeaderedContentControl Style="{StaticResource SubDisplayArea}" Grid.Column="1"  Margin="0,3,3,0">
                <HeaderedContentControl.Header>
                    Calendar
                </HeaderedContentControl.Header>
                <HeaderedContentControl>
                    <Calendar SelectedDate="{Binding CurrentDate}" HorizontalAlignment="Left" Margin="0" VerticalAlignment="Top"/>
                </HeaderedContentControl>
            </HeaderedContentControl>
        </StackPanel>

                    <Border Style="{StaticResource DetailBorder}"  Margin="5">
                        <ContentControl HorizontalAlignment="Stretch" Content="{Binding Path=_viewAddEvent}">
                            <ContentControl.Resources>
                                <DataTemplate DataType="{x:Type vm:AddEventViewModel}">
                                    <v:AddEventView />
                                </DataTemplate>
                            </ContentControl.Resources>
                        </ContentControl>
                    </Border>

        <HeaderedContentControl Style="{StaticResource SubDisplayArea}" Grid.Column="0" Grid.Row="1" Margin="0,5,3,0">
            <HeaderedContentControl.Header>
                Detail Event
            </HeaderedContentControl.Header>
            <ScrollViewer>
                <HeaderedContentControl>
                    <StackPanel>
                        <Border Style="{StaticResource DetailBorder}"  Margin="5">
                            <ContentControl HorizontalAlignment="Stretch" Content="{Binding Path=_viewEvent}">
                                <ContentControl.Resources>
                                    <DataTemplate DataType="{x:Type vm:DetailsEventsViewModel}">
                                        <v:DetailsEventsView />
                                    </DataTemplate>
                                </ContentControl.Resources>
                            </ContentControl>
                        </Border>
                    </StackPanel>
                </HeaderedContentControl>
            </ScrollViewer>
        </HeaderedContentControl>

    </Grid>
</UserControl>
