<Window x:Class="BMS.Shell"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="clr-namespace:BMS.ViewModel"
        xmlns:v="clr-namespace:BMS.View"
        xmlns:local="clr-namespace:BMS"
        xmlns:cal="http://www.codeplex.com/prism"
        xmlns:prism="http://www.codeplex.com/prism"
        Title="Business Managment Software" 
        WindowState="Maximized"
        Background="#FFEDEDED">

    <Window.Resources>
        <DataTemplate DataType="{x:Type vm:MenuModuleViewModel}">
            <v:MenuModuleView />
        </DataTemplate>

    </Window.Resources>

    <Grid>

        <local:Banner VerticalAlignment="Top" />

        <HeaderedContentControl Style="{StaticResource DisplayArea}" Margin="30,80,30,30" HorizontalAlignment="Left" Width="150" Height="Auto" VerticalAlignment="Top">
            <HeaderedContentControl.Header>
                Menu
            </HeaderedContentControl.Header>
            <ItemsControl ItemsSource="{Binding ViewModels}"  />
        </HeaderedContentControl>
        <Border BorderBrush="Black" BorderThickness="3" HorizontalAlignment="Stretch" Margin="195,80,10,10" VerticalAlignment="Stretch" CornerRadius="5">
            <StackPanel  Background="White">
                <ContentControl Margin="4" prism:RegionManager.RegionName="MainModuleRegion"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>